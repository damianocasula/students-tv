<% include ../partials/header %>

<h2>Crea un nuovo video</h2>

<form action="/videos" method="POST">
  <div class="form-group">
    <input class="form-control" type="text" name="titolo" placeholder="Titolo">
  </div>

  <div class="form-group">
    <input class="form-control" type="text" name="anteprima" placeholder="URL anteprima">
  </div>

  <div class="form-group">
    <input class="form-control" type="test" name="video" placeholder="URL video">
  </div>

  <div class="form-group">
    <input class="form-control" type="test" name="descrizione" placeholder="Descrizione">
  </div>

  <div class="form-group">
    <button class="btn btn-lg btn-primary btn-default btn-block">Crea</button>
  </div>
</form>
<a href="/videos">Torna indietro</a>

