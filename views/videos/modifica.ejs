<% include ../partials/header %>

<h2>Modifica <em>'<%= video.name %>'</em></h2>

<form action="/videos/<%= video._id %>?_method=PUT" method="POST">
  <div class="form-group">
    <input class="form-control" type="text" name="video[titolo]" value="<%= video.titolo %>">
  </div>

  <div class="form-group">
    <input class="form-control" type="text" name="video[anteprima]" value="<%= video.anteprima %>">
  </div>

  <div class="form-group">
    <input class="form-control" type="text" name="video[video]" value="<%= video.video %>">
  </div>

  <div class="form-group">
    <input class="form-control" type="text" name="video[descrizione]" value="<%= video.descrizione %>">
  </div>

  <div class="form-group">
    <button class="btn btn-lg btn-primary btn-default btn-block">Modifica</button>
  </div>
</form>

<a href="/videos/<%= video._id %>">Torna al video</a>

<% include ../partials/footer %>
